    <script>
        // --- Script do Menu Mobile ---
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        mobileMenuButton.addEventListener('click', () => mobileMenu.classList.toggle('hidden'));
        const mobileLinks = mobileMenu.getElementsByTagName('a');
        for (let link of mobileLinks) {
            link.addEventListener('click', () => mobileMenu.classList.add('hidden'));
        }

        // --- Script da Calculadora de Frete ---
        const cepInput = document.getElementById('cep-input');
        const calculateBtn = document.getElementById('calculate-shipping');
        const resultDiv = document.getElementById('shipping-result');
        const buttonText = document.getElementById('button-text');
        const buttonLoader = document.getElementById('button-loader');
        cepInput.addEventListener('input', (e) => e.target.value = e.target.value.replace(/\D/g, ''));
        calculateBtn.addEventListener('click', async () => {
            const cep = cepInput.value;
            if (cep.length !== 8) {
                resultDiv.innerHTML = `<p class="text-red-500 text-center p-4">Por favor, digite um CEP válido com 8 dígitos.</p>`;
                return;
            }
            buttonText.classList.add('hidden');
            buttonLoader.classList.remove('hidden');
            calculateBtn.disabled = true;
            resultDiv.innerHTML = '';
            try {
                const response = await fetch(`https://viacep.com.br/ws/${cep}/json/`);
                const data = await response.json();
                if (data.erro) {
                    resultDiv.innerHTML = `<p class="text-red-500 text-center p-4">CEP não encontrado.</p>`;
                    return;
                }
                const pacPrice = (22.50 + Math.random() * 8).toFixed(2).replace('.', ',');
                const sedexPrice = (35.70 + Math.random() * 12).toFixed(2).replace('.', ',');
                resultDiv.innerHTML = `
                    <h4 class="font-bold text-lg mb-3 text-center text-amber-900">Estimativa para ${data.localidade} - ${data.uf}</h4>
                    <div class="space-y-2">
                        <div class="flex justify-between items-center p-3 bg-white rounded-md shadow-sm border">
                            <div><p class="font-semibold">PAC</p><p class="text-sm text-gray-500">7-10 dias úteis</p></div>
                            <span class="font-bold text-lg text-amber-900">R$ ${pacPrice}</span>
                        </div>
                        <div class="flex justify-between items-center p-3 bg-white rounded-md shadow-sm border">
                             <div><p class="font-semibold">SEDEX</p><p class="text-sm text-gray-500">2-4 dias úteis</p></div>
                            <span class="font-bold text-lg text-amber-900">R$ ${sedexPrice}</span>
                        </div>
                    </div>
                    <p class="text-xs text-gray-500 mt-3 text-center">*Valores e prazos são apenas uma estimativa.</p>`;
            } catch (error) {
                resultDiv.innerHTML = `<p class="text-red-500 text-center p-4">Ocorreu um erro. Tente novamente.</p>`;
            } finally {
                buttonText.classList.remove('hidden');
                buttonLoader.classList.add('hidden');
                calculateBtn.disabled = false;
            }
        });

        // --- Script do Modal de Encomenda ---
        const orderModal = document.getElementById('order-modal');
        const closeModalButton = document.getElementById('close-modal');
        const buyButtons = document.querySelectorAll('.buy-button');
        const productNameInput = document.getElementById('product-name');
        const orderForm = document.getElementById('order-form');
        const formContent = document.getElementById('form-content');
        const formSuccess = document.getElementById('form-success');
        const closeSuccessButton = document.getElementById('close-success-button');

        function openModal(productName) {
            productNameInput.value = productName;
            orderModal.classList.remove('hidden');
            setTimeout(() => {
                orderModal.classList.remove('opacity-0');
                orderModal.querySelector('div').classList.remove('scale-95');
            }, 10);
            // Reset form state
            formContent.classList.remove('hidden');
            formSuccess.classList.add('hidden');
            orderForm.reset();
        }

        function closeModal() {
            orderModal.classList.add('opacity-0');
            orderModal.querySelector('div').classList.add('scale-95');
            setTimeout(() => {
                orderModal.classList.add('hidden');
            }, 300);
        }

        buyButtons.forEach(button => {
            button.addEventListener('click', () => {
                const card = button.closest('div');
                const title = card.querySelector('.product-title').innerText;
                openModal(title);
            });
        });

        orderForm.addEventListener('submit', function(e) {
            e.preventDefault();
            formContent.classList.add('hidden');
            formSuccess.classList.remove('hidden');
            // Aqui você poderia adicionar uma integração real, como enviar o email.
            // Por enquanto, apenas mostramos a mensagem de sucesso.
        });

        closeModalButton.addEventListener('click', closeModal);
        closeSuccessButton.addEventListener('click', closeModal);
        orderModal.addEventListener('click', (e) => {
            if (e.target === orderModal) {
                closeModal();
            }
        });
    </script>

</body>
</html>
